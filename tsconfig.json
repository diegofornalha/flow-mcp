{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
} 